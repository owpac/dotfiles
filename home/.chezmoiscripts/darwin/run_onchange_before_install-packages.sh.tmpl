{{- if and (eq .chezmoi.os "darwin") (not .is_minimum) -}}
#!/usr/bin/env bash

set -eufo pipefail

source {{ .chezmoi.workingTree }}/lib/logs.sh

{{ $taps := list
-}}
{{ $brews := list
      "age"
      "chezmoi"
      "docker"
      "docker-compose"
      "gh"
      "git"
      "htop"
      "mas"
      "mise"
      "mtr"
      "nmap"
      "npm"
      "pipenv"
      "pipx"
      "tree"
      "yarn"
-}}
{{ $casks := list
      "1password"
      "1password-cli"
      "appcleaner"
      "arc"
      "discord"
      "elgato-stream-deck"
      "elgato-wave-link"
      "firefox"
      "font-jetbrains-mono-nerd-font"
      "google-drive"
      "iterm2"
      "obsidian"
      "raycast"
      "readdle-spark"
      "rectangle"
      "signal"
      "spotify"
      "viscosity"
      "visual-studio-code"
-}}

log_task "Installing Homebrew taps, brews, and casks..."
brew bundle --file=/dev/stdin <<EOF || true
{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end -}}
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
log_done "Homebrew apps installed! 🍺"

{{- end -}}
