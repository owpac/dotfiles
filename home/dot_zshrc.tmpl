# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

### OMZ

export ZSH=$HOME/.oh-my-zsh
export HOMEBREW_NO_ANALYTICS=1

ZSH_THEME="powerlevel10k/powerlevel10k"
plugins=(
  mise
  chezmoi
  git
  pipenv
  terraform
  kubectl
  autoupdate
  colored-man-pages
  zsh-syntax-highlighting
  zsh-autosuggestions
)
source $ZSH/oh-my-zsh.sh

### Editor

if [ "$(command -v code)" ]; then
  export EDITOR='code --wait'
else
  export EDITOR='vim'
fi

### Aliases

alias terractx='terraform workspace select $1'
alias ghpr='gh pr create -df -t $(git_current_branch) && gh pr view -w && bin/dev ci:build'
alias gbrm="git for-each-ref --format='%(refname:short)' refs/heads | grep -v \"master\|main\" | xargs git branch -D"

function kompose() {
  local action=$1
  local base_dir=$2
  local sub_dir=$3
  local compose_action=$action

  if [[ "$action" == "up" ]]; then
    compose_action="$action -d"
  fi

  if [[ -z "$sub_dir" ]]; then
    # If sub_dir is not provided, iterate over directories in base_dir
    for dir in $base_dir/*; do
      if [[ -d "$dir" && -f "$dir/compose.yml" ]]; then
        if [[ -f "base/$(basename $dir)/compose.yml" ]]; then
          local cmd="docker compose -f base/$(basename $dir)/compose.yml -f $dir/compose.yml $compose_action"
          # echo $cmd
          eval $cmd
        else
          local cmd="docker compose -f $dir/compose.yml $compose_action"
          # echo $cmd
          eval $cmd
        fi
      fi
    done
  else
    # If sub_dir is provided, use the specific compose files
    if [[ -f "base/$sub_dir/compose.yml" ]]; then
      local cmd="docker compose -f base/$sub_dir/compose.yml -f $base_dir/$sub_dir/compose.yml $compose_action"
      # echo $cmd
      eval $cmd
    else
      local cmd="docker compose -f $base_dir/$sub_dir/compose.yml $compose_action"
      # echo $cmd
      eval $cmd
    fi
  fi
}

